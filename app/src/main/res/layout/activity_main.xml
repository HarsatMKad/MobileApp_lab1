<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6C7DEA"
        android:gravity="center"
        android:text="Первая часть задания"
        android:textColor="#000000"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:includeFontPadding="true"
        android:text="Кадесников Михаил ПИ-221"
        android:textSize="24sp" />

    <TextView
        android:layout_width="363dp"
        android:layout_height="128dp"
        android:layout_marginTop="15dp"
        android:background="#EC9696"
        android:freezesText="false"
        android:text="«Если б мишки были пчелами, \n То они бы нипочём \n
Никогда и не подумали \n Так высоко строить дом!»"
        android:textSize="24sp" />

    <TextView
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#82D672"
        android:fontFamily="serif"
        android:text="@string/text_translation"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="#6C7DEA"
        android:gravity="center"
        android:text="Вторая часть задания"
        android:textColor="#000000"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:includeFontPadding="true"
        android:text="@string/first_and_last_name_and_group"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="OK" />

</LinearLayout>